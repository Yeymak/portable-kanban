{
  "name": "portable-kanban",
  "displayName": "Portable Kanban",
  "description": "This is an extension to create a portable kanban.",
  "version": "0.1.38",
  "author": "harehare",
  "publisher": "harehare",
  "icon": "assets/icon.png",
  "private": true,
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "kanban"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harehare/portable-kanban.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "portable-kanban.edit",
        "displayName": "Kanban",
        "selector": [
          {
            "filenamePattern": "*.kanban"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "portable-kanban.new",
        "title": "Portable Kanban: Create new Kanban"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PortableKanban",
      "properties": {
        "portable-kanban.theme": {
          "title": "Portable Kanban Theme",
          "type": "string",
          "default": "system",
          "enum": [
            "dark",
            "light",
            "system"
          ],
          "description": "Switch the theme to dark or light."
        },
        "portable-kanban.show-description": {
          "title": "Portable Kanban Show Description",
          "type": "boolean",
          "default": "true",
          "description": "Card description is shown."
        },
        "portable-kanban.show-task-list": {
          "title": "Portable Kanban Show Task List",
          "type": "boolean",
          "default": "true",
          "description": "Card task list is shown."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "NODE_ENV=production webpack --mode production",
    "watch": "NODE_ENV=development webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "jest --silent=false --verbose false"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@svgr/webpack": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/react": "^18.3.3",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.3.0",
    "@types/react-linkify": "^1.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@vscode/test-electron": "^2.4.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^10.4.1",
    "jest": "^29.7.0",
    "mocha": "^10.4.0",
    "prettier": "^3.3.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@mojotech/json-type-validation": "^3.1.0",
    "date-fns": "^3.6.0",
    "fuse.js": "^7.0.0",
    "jotai": "^2.8.1",
    "jotai-optics": "^0.4.0",
    "optics-ts": "^2.4.1",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-indiana-drag-scroll": "^3.0.3-alpha",
    "react-linkify": "^1.0.0-alpha",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.23.1",
    "react-textarea-autosize": "^8.5.3",
    "styled-components": "^6.1.11",
    "uuid": "^9.0.1"
  }
}
